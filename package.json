{
  "name": "hbc-project-controls",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "main": "lib/index.js",
  "engines": {
    "node": ">=18.17.1 <23.0.0"
  },
  "scripts": {
    "build:lib": "cd packages/hbc-sp-services && npm run build",
    "build:app": "gulp bundle --ship && gulp package-solution --ship",
    "build": "npm run build:lib && npm run build:app",
    "clean": "gulp clean",
    "test": "npm run test --workspace=packages/hbc-sp-services",
    "test:coverage": "npm run test:coverage --workspace=packages/hbc-sp-services",
    "test:ci": "npm run test:ci --workspace=packages/hbc-sp-services",
    "test:watch": "npm run test --workspace=packages/hbc-sp-services -- --watch",
    "serve": "gulp serve --nobrowser",
    "bundle": "gulp bundle",
    "bundle:ship": "gulp bundle --ship",
    "package-solution": "gulp package-solution",
    "package-solution:ship": "gulp package-solution --ship",
    "lint": "eslint src/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx --fix",
    "dev": "webpack serve --config dev/webpack.config.js --mode development",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build -o storybook-static",
    "chromatic": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN --storybook-build-dir=storybook-static",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "postinstall": "npm run build:lib",
    "clean:dev": "rm -rf node_modules packages/hbc-sp-services/node_modules packages/hbc-sp-services/lib dev/dist && npm install"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.46.0",
    "@fluentui/react-icons": "2.0.319",
    "@hbc/sp-services": "*",
    "@microsoft/signalr": "^10.0.0",
    "@microsoft/sp-core-library": "1.21.1",
    "@microsoft/sp-lodash-subset": "1.21.1",
    "@microsoft/sp-office-ui-fabric-core": "1.21.1",
    "@microsoft/sp-property-pane": "1.21.1",
    "@microsoft/sp-webpart-base": "1.21.1",
    "@pnp/graph": "^4.4.1",
    "@pnp/logging": "^4.4.1",
    "@pnp/queryable": "^4.4.1",
    "@pnp/sp": "^4.4.1",
    "echarts": "^5.6.0",
    "echarts-for-react": "^3.0.6",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-joyride": "^2.9.3",
    "react-router-dom": "^6.22.3",
    "tslib": "^2.6.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@chromatic-com/storybook": "^3.2.7",
    "@microsoft/eslint-config-spfx": "1.21.1",
    "@microsoft/eslint-plugin-spfx": "1.22.2",
    "@microsoft/rush-stack-compiler-4.7": "0.1.1",
    "@microsoft/sp-build-web": "1.21.1",
    "@microsoft/sp-module-interfaces": "1.21.1",
    "@playwright/test": "^1.50.1",
    "@storybook/addon-a11y": "^8.5.0",
    "@storybook/addon-essentials": "^8.5.0",
    "@storybook/addon-themes": "^8.5.0",
    "@storybook/react-webpack5": "^8.5.0",
    "@storybook/test": "^8.5.0",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.19.11",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "@types/react-router-dom": "^5.3.3",
    "@types/webpack-env": "^1.18.8",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "ajv": "^8.17.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gulp": "^4.0.2",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "storybook": "^8.5.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "~5.3.3",
    "webpack": "^5.90.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.0.0"
  },
  "volta": {
    "node": "22.14.0"
  },
  "overrides": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "scheduler": "^0.23.2",
    "@fluentui/react-icons": "2.0.319",
    "jest-cli": "^29.7.0",
    "@jest/core": "^29.7.0",
    "@jest/transform": "^29.7.0"
  }
}
