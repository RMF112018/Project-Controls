    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.0.0"
  },
  "volta": {
    "node": "22.14.0"
  },
  "overrides": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "scheduler": "^0.23.2",
    "@fluentui/react-icons": "2.0.319",
    "jest-cli": "^29.7.0",
